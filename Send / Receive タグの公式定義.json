        "authoring_rules": {
            "max_send_tags_per_skill": 2,
            "max_receive_tags_per_skill": 3,
            "rare_tags": [
                "DeadStop",
                "Snow"
            ],
            "role_rules": {
                "starter": "sendは1つが基本。receiveは1〜2。",
                "connector": "sendは1〜2。receiveは2〜3で橋渡し。",
                "finisher": "sendは0〜1（基本Downのみ）。receiveは広めで成立率を担保。"
            }
